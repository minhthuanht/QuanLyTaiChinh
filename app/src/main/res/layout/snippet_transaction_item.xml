<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackgroundItem">

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/imgTransactionItem"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:src="@drawable/facebook"
        android:layout_centerVertical="true"
        android:contentDescription="logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTransactionLable"
        android:text="Ăn uống"
        android:textSize="16dp"
        android:layout_toRightOf="@+id/imgTransactionItem"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTransactionNote"
        android:layout_below="@+id/txtTransactionLable"
        android:textSize="12dp"
        android:layout_toRightOf="@+id/imgTransactionItem"
        android:text="bacacb"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"/>

    <com.minhthuanht.quanlytaichinh.view.CurrencyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTrandingItem"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:text="555đ"
        android:textSize="24dp"
        android:textColor="@color/r_900"
        android:layout_marginRight="8dp"/>

</RelativeLayout>
